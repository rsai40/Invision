<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="@dimen/layout_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:layout_margin="@dimen/layout_margin"
                    android:src="@drawable/logitechmouse" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/item_name"
                        android:id="@+id/item_name"
                        android:layout_margin="@dimen/layout_margin"
                        android:layout_marginRight="@dimen/layout_margin"
                        android:textSize="@dimen/text_size"
                        android:textStyle="bold"
                        android:textColor="@color/darkBlack"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/layout_margin">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/customer_review_count"
                            android:text="@string/item_review_count"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/layout_margin"
                            android:id="@+id/customer_review"
                            android:text="@string/customer_review"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="@dimen/layout_margin">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/battery_symbol"
                            android:text="@string/item_review_count"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/Battery_status"
                            android:text="@string/battery"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:textSize="@dimen/text_size"
                            android:drawableLeft="@drawable/line_chart"
                            android:textColor="@color/green"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/layout_margin"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@color/horizontalLine"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/layout_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/positive_like"
                    android:drawableLeft="@drawable/green_like"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="Extremely Positive"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like_count"
                    android:text="156"
                    android:gravity="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight="0.2"
                    android:drawableLeft="@drawable/like"
                    android:layout_margin="@dimen/layout_margin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dislike_count"
                    android:text="16"
                    android:textSize="@dimen/text_size"
                    android:drawableLeft="@drawable/dislike"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:layout_margin="@dimen/layout_margin"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>